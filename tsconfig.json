{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node18",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
